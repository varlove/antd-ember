<section class="demo-type">
	<h2>输入提示</h2>
	<div class="demo">
		<div class="demo-example">
			{{io-select
				combobox=true
				width=200
				placeholder="搜索选择"
				value=comboboxValue
				onChange="comboboxOnChange"
				options=comboboxOptions
				}}
		</div>
		<div class="demo-code">
			<div class="highlight">
<pre><code class="language-html">
\{{io-select
	combobox=true
	width=200
	placeholder="搜索选择"
	value=comboboxValue
	onChange="comboboxOnChange"
	options=comboboxOptions
	}}

comboboxOnChange: function() {

	if (this.get('comboboxValue') === '') {
		this.set('comboboxOptions', []);
		return;
	}

	setTimeout(() => {
		this.set('comboboxOptions', [{
			value: 'jack',
			label: 'jack'
		}, {
			value: 'lucy',
			label: 'lucy'
		}, {
			value: '6174',
			label: '6174'
		}]);
	}, 1000);
}
</code></pre>
			</div>
		</div>
	</div>
</section>

