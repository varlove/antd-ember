<div class="row io-table-footer">
  {{! table summary start }}
  <div class="{{if useNumericPagination classes.footerSummaryNumericPagination classes.footerSummaryDefaultPagination}} {{classes.footerSummary}}">
    <i style="color: #999;"> {{summary}} </i>
  </div>

  {{! pagesize selection end }}
  {{! pagination start }}
  {{!-- {{#if useNumericPagination}} --}}
  <div class="col-sm-16">
    {{partial numericPaginationTemplate}}
    <div class="{{classes.pageSizeSelectWrapper}} pull-right" style="margin-right: 30px;">
      {{#io-select value=pageSize placeholder="--每页显示--"}}
        {{#each pageSizeValues as |item|}}
          {{io-option value=item label=item}}
        {{/each}}
      {{/io-select}}
     </div>
  </div>
{{!--   {{else}}
    <div class="{{classes.paginationWrapper}} {{classes.paginationWrapperDefault}}">
      {{partial simplePaginationTemplate}}
    </div>
  {{/if}}
 --}}  {{! pagination end }}
</div>